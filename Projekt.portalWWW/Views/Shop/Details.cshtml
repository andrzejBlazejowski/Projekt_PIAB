@model Projekt.Data.Data.Shop.Product
@{

    ViewData["Title"] = Model.Name;
}

<div class="gallery-curve-wrapper" style="display: block; height: 100%; transition: -webkit-transform 0.5s cubic-bezier(0.42, 0, 0.58, 1) 0s;">



    <a class="gallery-cover gray static" style="transition: opacity 0.3s ease 0s; position:absolute; top:0; left:-230px; right:-230px; z-index: -1;">
        <img class="responsive-img" src="@Model.Image.ImageData" alt="Second Blog Post" crossorigin="anonymous">
        <div class="gradient" style="background: linear-gradient(rgba(0, 0, 0, 0) 0%, rgb(87, 93, 35) 100%);"></div>
    </a>



    <div class="gallery-header" style="height: 62.5px; width: 654.797px; transform: scale(2.03437, 11.984) translate3d(140.314px, -21.208px, 0px); transition: -webkit-transform 0.5s cubic-bezier(0.42, 0, 0.58, 1) 0s; transform-origin: 0px 0px; display: none;">
        <span style="opacity: 0;">@ViewData["Title"]t</span>
    </div>





    <div class="gallery-body" style="margin-top: 300px; padding: 40px; min-height: 749px; display: block; background:white; border-radius:5px;">
        <div class="title-wrapper">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="checkout-column" style="padding: 40px; padding-left:0;">
            <form action="/cart/add" method="post">
                <div class="price-quantity-wrapper">
                    <div class="price-wrapper" style="margin-right: 20px;" data-price-wrapper="">
                        <span class="price" data-product-price="">
                            @Model.Price PLN
                        </span>


                    </div>

                    <div class="input-field quantity-counter">
                        <i class="material-icons remove">remove_circle_outline</i>
                        <input type="number" id="Quantity" name="quantity" value="1" min="1">
                        <i class="material-icons add">add_circle_outline</i>
                    </div>
                </div>



                <div class="select-wrapper no-js">
                    <span class="caret">▼</span><input type="text" class="select-dropdown" readonly="true" data-activates="select-options-74604e0f-7ce6-095f-fc6c-dc342cd4a0ec" value="
                  Default Title
              "><ul id="select-options-74604e0f-7ce6-095f-fc6c-dc342cd4a0ec" class="dropdown-content select-dropdown ">
                        <li class="">
                            <span>
                                Default Title
                            </span>
                        </li>
                    </ul><select name="id" class="no-js initialized" data-product-select="">

                        <option selected="selected" value="41284090381">
                            Default Title
                        </option>

                    </select>
                </div>


                <button class="btn-large z-depth-0 halfway-fab waves-effect waves-light primary_bg" type="submit" name="add" data-add-to-cart="">
                    <span data-add-to-cart-text="">

                        Dodaj do koszyka

                    </span>
                </button>



            </form>
        </div>
        <div class="description">
            <p><meta charset="utf-8"><span>@Model.Description</span></p>
            <p><meta charset="utf-8"><span>@Model.Content</span></p>

        </div>
    </div>

</div>