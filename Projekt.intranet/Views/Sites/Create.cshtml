@model Projekt.Data.Data.CMS.Site

@{
    ViewData["Title"] = "Dodaj nową strone statyczną";
}

<div class="container-fluid max-w-screen-md vstack gap-6">
    <div class="card">
        <div class="card-body pb-0">
            <div class="mb-7">
                <h4 class="mb-1">@ViewData["Title"]</h4>
            </div>
            <div class="row g-5">
                <form asp-action="Create" class="row g-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <label asp-for="Content" class="control-label"></label>
                <textarea rows="5" asp-for="Content" class="form-control">
                </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MetaTitle" class="control-label"></label>
                <input asp-for="MetaTitle" class="form-control" />
                <span asp-validation-for="MetaTitle" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <textarea rows="3" asp-for="Description" class="form-control">
                </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MetaDescription" class="control-label"></label>
                <textarea rows="3" asp-for="MetaDescription" class="form-control">
                </textarea>
                <span asp-validation-for="MetaDescription" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="HeaderImageId" class="control-label"></label>
                <select asp-for="HeaderImageId" class="form-control" asp-items="ViewBag.HeaderImageId"></select>
            </div>
            <div class="col-md-2 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="col-md-4">
                <label asp-for="LastModificationDate" class="control-label"></label>
                <input asp-for="LastModificationDate" class="form-control" />
                <span asp-validation-for="LastModificationDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="LastModifiedBy" class="control-label"></label>
                <input asp-for="LastModifiedBy" class="form-control" />
                <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>


                <div class="card-footer text-end">

                        <a asp-action="Index" class="m-1">
                            <button type="button" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-arrow-bar-left"></i>
                                Wróć do listy
                            </button>
                        </a>
                        <input type="submit" value="Dodaj" class="btn btn-sm btn-primary" />
                </div>
                </form>
            </div>
        </div>
        </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
