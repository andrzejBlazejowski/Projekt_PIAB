@model Projekt.Data.Data.CMS.Parameter

@{
    ViewData["Title"] = "Dodaj Parametr strony";
}

<div class="container-fluid max-w-screen-md vstack gap-6">
    <div class="card">
        <div class="card-body pb-0">
            <div class="mb-7">
                <h4 class="mb-1">@ViewData["Title"]</h4>
            </div>
            <div class="row g-5">
                <form asp-action="Create" class="row g-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 form-group">
                <label asp-for="Key" class="control-label"></label>
                <input asp-for="Key" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-4 form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="LastModificationDate" class="control-label"></label>
                <input asp-for="LastModificationDate" class="form-control" />
                <span asp-validation-for="LastModificationDate" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="LastModifiedBy" class="control-label"></label>
                <input asp-for="LastModifiedBy" class="form-control" />
                <span asp-validation-for="LastModifiedBy" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="col-md-4 form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <input asp-for="CreatedBy" class="form-control" />
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                    </div>

                    <div class="card-footer text-end">

                        <a asp-action="Index" class="m-1">
                            <button type="button" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-arrow-bar-left"></i>
                                Wróć do listy
                            </button>
                        </a>
                        <input type="submit" value="Dodaj" class="btn btn-sm btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
